<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Users Playlist</title>
  </head>
  <body>
    <h1><%=@user.first_name%> <%=@user.last_name%>'s Playlist</h1>
    <table>
      <tr>
        <th>Artist</th>
        <th>Title</th>
        <th>Times Added</th>
      </tr>
      <% @user.songs_added.uniq.each do |song| %>
      <tr>
        <td><%=song.artist%></td>
        <td><%=song.title%></td>
        <td><%=@user.songs_added.where(id:song).count%></td>
      </tr>
      <% end %>
    </table>
  </body>
</html>
